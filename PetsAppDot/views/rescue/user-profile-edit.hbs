<div class="container pad-50 bg-pink">
    <div class="row">
        <div class="col-12">
            <h2 class=" border-lf-rg pad-50 aling-center white">
                <strong>Edit User {{username}}</strong></h2>
        </div>
    </div>

    <form class="form-inline" action="/rescue/edit/{{_id}}" method="post">
        <div class="form-group mb-2 pad-15-r">
            <label for="name" class="pad-15-r ">Username</label>
            <input name="username" type="text" class="form-control" id="name" value="{{usermane}}">
        </div>
        <div class="form-group mb-2 pad-15">
            <label for="ocupation" class="pad-15-r ">Phone</label>
            <input name="phone" type="text" class="form-control" id="ocupation" value="{{phone}}">
        </div>
        <div class="form-group mb-2 pad-15">
            <label for="catchPharse" class="pad-15-r ">Address</label>
            <input name="adress" type="text" class="form-control" id="catchPharse" value="{{adress}}">
        </div>
        <div class="form-group mb-2 pad-15">
            <label for="catchPharses" class="pad-15-r ">Avatar</label>
            <input name="avatar" type="text" class="form-control" id="catchPharses" value="{{avatar}}">
        </div>

        <button type="submit" class="btn btn-dark mb-2">Edit User</button>
    </form>
    <a class="btn btn-dark btn-sm bradius-0" href='rescue/profile'>Back List</a>


</div>