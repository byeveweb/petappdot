<h1>Pet Edit</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h1 style="font-weight: 100">Editar perfil</h1>
        </div>
        <div class="col-md-6">
            <form action="/adopter/profile/{{thePet._id}}" method="POST">
                {{#with thePet}}
                <div class="form-group">
                    <label for="field1">Type Animal</label>
                    <input name="typeAnimal" type="text" class="form-control" id="field1" placeholder="{{typeAnimal}}">
                </div>
                <div class="form-group">
                    <label for="field2">Race</label>
                    <input name="race" type="text" class="form-control" id="field2" placeholder="{{race}}">
                </div>
                <div class="form-group">
                    <label for="field3">Genre</label>
                    <input name="genre" type="text" class="form-control" id="field3" placeholder="{{genre}}">
                </div>
                <div class="form-group">
                    <label for="field4">Age</label>
                    <input name="age" type="text" class="form-control" id="field4" placeholder="{{age}}">
                </div>


                {{/with}}
                <button type="submit" class="btn btn-dark btn-block btn-lg">Guardar</button>

                {{#if errorMsg}}
                <div id="errorMsg">{{{errorMsg}}}</div>
                {{/if}}
            </form>

            <a href="/adopter/profile" class="btn btn-dark">Volver</a>

        </div>
    </div>

